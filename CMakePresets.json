{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "build-directory",
      "hidden": true,
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "default",
      "displayName": "Default non-windows configuration",
      "inherits": [
        "build-directory"
      ]
    },
    {
      "name": "windows-msvc2017",
      "displayName": "Visual Studio 17 2017",
      "inherits": [
        "build-directory"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "msvc2017-debug",
      "displayName": "MSVC 2017 Debug",
      "configurePreset": "windows-msvc2017",
      "configuration": "Debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "msvc2017-release",
      "displayName": "MSVC 2017 Release",
      "configurePreset": "windows-msvc2017",
      "configuration": "Release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "debug",
      "displayName": "default configuration (debug build)",
      "configurePreset": "default",
      "configuration": "Debug",
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release",
      "displayName": "default configuration (release build)",
      "configurePreset": "default",
      "configuration": "Release",
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ]
}
